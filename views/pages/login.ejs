<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <%- include('../partials/header'); %>
</head>
<%- include('../partials/navBar'); %>

<body>
  <h1 class="p-3"><%= title %></h1>
  <h5 class="text-danger"><%= incorrectInputMessage %></h5>
  <div class="container shadow rounded bg-white p-3 w-25">
    <form method="post" action="/login">
      <div class="mb-3">
        <label for="usernameInput" class="form-label">Username</label>
        <input type="text" class="form-control <%= 
        locals?.errors?.userName === undefined ? '' : 'is-invalid'
         %>" id="userName" placeholder="Username" name="userName" aria-describedby="userNameError">
        <div id="userNameError" class="invalid-feedback"><%= locals?.errors?.userName %></div>
      </div>
      <div class="mb-3">
        <label for="passwordInput" class="form-label">Password</label>
        <input type="password" class="form-control <%= 
        locals?.errors?.password === undefined ? '' : 'is-invalid' 
        %>" id="password" placeholder="Password" name="password" aria-describedby="passwordError">
        <div id="passwordError" class="invalid-feedback"><%= locals?.errors?.password %></div>
      </div>
      <button class="btn btn-primary btn-lg active" type="submit" aria-pressed="true" id="loginBtn">Login</button>
    </form>
  </div>


  <%- include('../partials/scriptLink'); %>
</body>

</html>